                    </TableRow>
                    // row 4

                    <TableRow
                        android:id="@+id/tr5"
                        android:layout_margin="10dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/time244"
                            android:layout_width="wrap_content"
