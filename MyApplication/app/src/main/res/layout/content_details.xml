<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weather.sanjay.myapplication.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <ScrollView
        android:id="@+id/scdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/linlayinflate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/detlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mdetails24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mdetails24"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/n24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.56"
                        android:background="@drawable/btn_white_glossy"
                        android:text=" 24 hours" />

                    <Button
                        android:id="@+id/n7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.38"
                        android:background="@drawable/btn_white_glossy"
                        android:text="Next 7 days" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detlay1">

                <TableLayout
                    android:id="@+id/tl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow
                        android:id="@+id/tr1"
                        android:background="@color/tabhead"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/time24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/sum24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summary"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/temp24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>
                    // row 1

                    <TableRow
                        android:id="@+id/tr2"
                        android:layout_margin="10dp"
                        android:background="@color/darkGrey">

                        <TextView
                            android:id="@+id/time241"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <ImageView
                            android:id="@+id/sum241"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/currentimage"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/temp241"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>
                    // row 2

                    <TableRow
